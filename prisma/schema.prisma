generator client {
  provider = "prisma-client-js"
  previewFeatures = ["orderByNulls"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  email     String  @unique
  firstName String
  lastName  String
  admin     Boolean @default(false)

  trips     trip[]
  flights   flight[]
}

model trip {
  id      String   @id @db.Uuid() @default(uuid())
  userId  Int
  user    user     @relation(fields: [userId], references: [id])
  name    String
  flights flight[]
}

model flight {
  id                 String         @id @db.Uuid() @default(uuid())
  userId             Int
  user               user           @relation(fields: [userId], references: [id])
  tripId             String?        @db.Uuid()
  trip               trip?          @relation(fields: [tripId], references: [id])
  departureAirportId String
  departureAirport   airport        @relation(name: "departureFlights", fields: [departureAirportId], references: [id])
  arrivalAirportId   String
  arrivalAirport     airport        @relation(name: "arrivalFlights", fields: [arrivalAirportId], references: [id])
  airlineId          String
  airline            airline        @relation(name: "flights", fields: [airlineId], references: [id])
  operatorAirlineId  String?
  operatorAirline    airline?       @relation(name: "operatorFlights", fields: [operatorAirlineId], references: [id])
  flightNumber       Int?
  callsign           String?
  aircraftTypeId     String?
  aircraftType       aircraft_type? @relation(fields: [aircraftTypeId], references: [id])
  tailNumber         String?
  outTime            String
  offTime            String?
  oonTime            String?
  inTime             String
  class              String?
  seatNumber         String?
  seatPosition       String?
  reason             String?
  comments           String?
  trackingLink       String?
}

model aircraft_type {
  id      String    @id
  iata    String
  icao    String
  name    String
  class   String

  flights flight[]
}

model airline {
  id              String  @id
  iata            String
  icao            String
  name            String
  callsign        String?
  fleetSize       Int?
  destinations    Int?
  logo            String?
  wiki            String?

  flights         flight[] @relation(name: "flights")
  operatorFlights flight[] @relation(name: "operatorFlights")
}

model airport {
  id               String  @id
  type             String
  name             String
  lat              Float
  lon              Float
  elevation        Int?
  continent        String
  countryId        String
  country          country @relation(fields: [countryId], references: [id])
  regionId         String
  region           region  @relation(fields: [regionId], references: [id])
  municipality     String
  timeZone         String
  scheduledService Boolean
  ident            String
  gps              String
  iata             String
  local            String

  departureFlights flight[] @relation(name: "departureFlights")
  arrivalFlights   flight[] @relation(name: "arrivalFlights")
}

model country {
  id        String  @id
  name      String
  continent String
  wiki      String?

  regions   region[]
  airports  airport[]
}

model region {
  id        String  @id
  name      String
  continent String
  countryId String
  country   country @relation(fields: [countryId], references: [id])
  wiki      String?

  airports  airport[]
}
